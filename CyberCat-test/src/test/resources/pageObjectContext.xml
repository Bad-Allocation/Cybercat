<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

  <bean id="soapServicesAspect" class="org.cybercat.automation.core.SoapServicesAspect"></bean>

  <aop:config proxy-target-class="true">
    <aop:aspect ref="soapServicesAspect">
      <aop:pointcut id="anySoapServicesMethod" expression="within(org.cybercat.automation.soap..*)" />
      <aop:around method="invoke" pointcut-ref="anySoapServicesMethod" />
    </aop:aspect>
  </aop:config>

  <!--YSlow plugin -->
  <bean id="YSlow" class="org.cybercat.automation.addons.yslow.PerformanceReportManager$YSlow" lazy-init="true" scope="prototype">
    <constructor-arg value="" />
  </bean>

  <!-- Pages -->
  <bean id="tableOfContentsFragment" class="org.apache.automation.pages.TableOfContentsFragment" lazy-init="true" scope="prototype"/>
  <bean id="topFragment" class="org.apache.automation.pages.TopFragment" lazy-init="true" scope="prototype"/>
  <bean id="welcomePage" class="org.apache.automation.pages.WelcomePage" lazy-init="true" scope="prototype"/>

</beans>
          
           